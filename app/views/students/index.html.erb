<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Last name</th>
      <th>First name</th>
      <th>Home address</th>
      <th>Home city</th>
      <th>Home state</th>
      <th>Home zip</th>
      <th>School year address</th>
      <th>School year city</th>
      <th>School year zip</th>
      <th>Room number</th>
      <th>Home phone</th>
      <th>Cell phone</th>
      <th>New student</th>
      <th>Returning student</th>
      <th>Athletic team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.student_id %></td>
        <td><%= student.last_name %></td>
        <td><%= student.first_name %></td>
        <td><%= student.home_address %></td>
        <td><%= student.home_city %></td>
        <td><%= student.home_state %></td>
        <td><%= student.home_zip %></td>
        <td><%= student.school_year_address %></td>
        <td><%= student.school_year_city %></td>
        <td><%= student.school_year_zip %></td>
        <td><%= student.room_number %></td>
        <td><%= student.home_phone %></td>
        <td><%= student.cell_phone %></td>
        <td><%= student.new_student %></td>
        <td><%= student.returning_student %></td>
        <td><%= student.athletic_team %></td>
        <td><%= link_to 'Show', student if policy(student).show? %></td>
        <td><%= link_to 'Edit', edit_student_path(student) if policy(student).edit? %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } if policy(student).destroy? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>
