
<h1>Permits</h1>

<%= form_tag(permits_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Permits" %>
<%= submit_tag "Search" %>
<% end %>
<% if @permits.empty? %>
  <p>There are no permits containing the term(s) <%= params[:search] %>.</p>
<% end %>
<table>
  <thead>
    <tr>
      <th>Permit ID</th>
      <th>Date issued</th>
      <th>Issued by</th>
      <th>Date entered</th>
      <th>Entered by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permits.each do |permit| %>
      <tr>
        <td><%= permit.permit_id %></td>
        <td><%= permit.date_issued %></td>
        <td><%= permit.issued_by %></td>
        <td><%= permit.date_entered %></td>
        <td><%= permit.entered_by %></td>
        <td><%= link_to 'Show', permit %></td>
        <td><%= link_to 'Edit', edit_permit_path(permit) %></td>
        <td><%= link_to 'Destroy', permit, method: :delete, data: { confirm: 'Are you sure?' } if policy(permit).destroy? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Permit', new_permit_path %>
